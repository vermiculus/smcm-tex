\newcounter{thecase}
\NewDocumentEnvironment { proofcases } { }
{
  \setcounter{thecase}{0}
  \NewDocumentCommand \case { o } {
    \par {
      \bfseries
      \refstepcounter{thecase}
      Case~\arabic{thecase}
      \IfValueT {##1} {~(##1)}:
    }
    \hspace{1em}
  }
  \vspace{1ex plus .2ex minus .2ex}
} {
  \par
  \vspace{1ex plus .2ex minus .2ex}
}


